<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2EF4B83"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="244dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:text="Chọn :"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài Tập 2.2"
            android:textSize="20sp"
            android:onClick="checBox"/>

        <Button
            android:id="@+id/btnBai23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài Tập 2.3"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_Bai24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bai Tập 2.4"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bai Tập 2.5"
            android:textSize="20sp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>